{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"moduleResolution": "node",
		"baseUrl": ".",
		"noImplicitAny": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"strictFunctionTypes": true,
		"paths": {
			"ramda": [
				"location-of-types/npm-ramda-package/index"
			]
		}
	},
	"include": [
		"src/*",
		"src/*/*",
		"src/*/*/*",
	],
	"exclude": [
		"node_modules",
	]
}