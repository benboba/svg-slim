{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"baseUrl": ".",
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"paths": {
			"ramda": [
				"location-of-types/npm-ramda-package/index"
			]
		},
		"declaration": true
	},
	"include": [
		"src/**/*",
		"test/**/*",
		"typings/*"
	],
	"exclude": [
		"node_modules"
	]
}